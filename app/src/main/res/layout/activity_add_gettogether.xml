<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"


    android:background="@drawable/ggg"

    >
  
<LinearLayout
    android:paddingTop="2sp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    >  
<EditText
    android:paddingTop="15dp"
	 android:id="@+id/txtName"
    android:layout_width="250dp" 
    android:layout_height="wrap_content"
    android:hint="Name"
    android:textColor="#ffffff"
    android:textStyle="bold"
    >
    </EditText>    
<EditText
    android:paddingTop="15dp"
	 android:id="@+id/txtDescription"
    android:layout_width="250dp" 
    android:layout_height="wrap_content"
    android:hint="Description"
    android:textColor="#ffffff"
    android:textStyle="bold"
    >
    </EditText> 
    
<TextView  
	 android:textSize="20sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Select Friends:[Scroll to view all]"
    android:textColor="#ffffff"
    android:textStyle="bold"
    >
    </TextView>  
    <ScrollView
        android:layout_marginTop="18dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content">
 <ListView	
	android:id="@+id/lstFriends"
	android:layout_height="100dp"
     android:background="#000000"
	android:layout_width="wrap_content"
	android:choiceMode="multipleChoice"
	 >"
</ListView>
</ScrollView>

 <TextView
     android:textSize="20sp"
     android:layout_marginTop="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Select Place:[Scroll to view all]"
    android:textColor="#ffffff"
    android:textStyle="bold"
    >
    </TextView>  
    
 <ScrollView


     android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content">
  <ListView
android:background="#000000"
android:padding="1sp"
      android:layout_marginTop="18dp"
	android:id="@+id/lstPlaces"
	android:layout_height="100dp" 
	android:layout_width="wrap_content"
	>   
</ListView>
</ScrollView>

   <Button
       android:textColor="#ffffff"
       android:layout_width="200sp"
       android:layout_height="60sp"
       android:gravity="center"

       android:layout_gravity="center"
       android:textStyle="bold"

       android:background="@drawable/kkk"

       android:layout_marginTop="18dp"
       android:id="@+id/btnSelectDate"
    android:text="Select Date"
    android:onClick="onClickDate" />

   <Button

       android:layout_marginTop="18dp"
       android:id="@+id/btnSelectTime"

    android:text="Select Time"
    android:onClick="onClickTime"
       android:textColor="#ffffff"
       android:layout_width="200sp"
       android:layout_height="60sp"
       android:gravity="center"

       android:layout_gravity="center"
       android:textStyle="bold"

       android:background="@drawable/kkk"


       />
  
<Button

    android:layout_marginTop="18dp"
     android:id="@+id/btnGetTogetherAdd"
    android:layout_width="200sp"
    android:layout_height="60sp"
    android:text="Add Get-Together"
    android:textColor="#ffffff"
    android:textStyle="bold"
    android:onClick="onClick"
    android:gravity="center"

android:layout_gravity="center"

    android:background="@drawable/kkk"
    
    >
       
 </Button> 
 
</LinearLayout>

</ScrollView>
